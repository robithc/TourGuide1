<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="90dp"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/place_details_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/place_details_image"
        android:scaleType="fitXY"
        tools:background="@drawable/zone_cafe" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/place_details_name_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingEnd="0dp"
            android:paddingLeft="4dp"
            android:paddingRight="0dp"
            android:paddingStart="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="place name" />

        <TextView
            android:id="@+id/place_details_location_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingEnd="0dp"
            android:paddingLeft="4dp"
            android:paddingRight="0dp"
            android:paddingStart="4dp"
            tools:text="place location" />

        <ImageButton
            android:id="@+id/details_go_to_map_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingTop="8dp"
            tools:background="@drawable/ic_place_black_24dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/place_details_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="0dp"
        android:paddingLeft="4dp"
        android:paddingRight="0dp"
        android:paddingStart="4dp"
        android:paddingTop="8dp"
        tools:text="description" />
</LinearLayout>