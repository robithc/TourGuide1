<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/details_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight= "90dp">



    <ImageButton
        android:background="@drawable/pub"
        android:id="@+id/place_details_image"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">


        <TextView
            android:id="@+id/place_details_name_text"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:text="place name" />


        <TextView
            android:id="@+id/place_details_location_text"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:text="place location" />

        <ImageButton
            android:background="@drawable/ic_place_black_24dp"
            android:id="@+id/details_go_to_map_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/place_details_description_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:text="description"/>
</LinearLayout>